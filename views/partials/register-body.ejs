<main>
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div
          class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 register-form"
        >
          <form action="/register" method="post" class="form-group">
            <% if(hasErrors) {%>
              <div class="alert alert-danger text-center" id="myAlert">
                
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <% _.forEach(messages, function(error){ %> <%= error %><br />
              <% }) %>
            </div>
            <% } %>
            <div class="input-container">
              <i class="far fa-envelope icon"></i>
              <input
                type="email"
                name="email"
                class="inp"
                placeholder="Email"
              />
            </div>
            <div class="input-container">
              <i class="far fa-user icon"></i>
              <input
                type="text"
                name="username"
                class="inp"
                placeholder="Username"
              />
            </div>
            <div class="input-container">
              <i class="fas fa-lock icon"></i>
              <input
                type="password"
                name="password"
                class="inp"
                placeholder="Password"
              />
            </div>
            <div class="input-container">
              <i class="fas fa-key icon"></i>
              <input
                type="password"
                class="inp"
                name="re_password"
                placeholder="Confirm password"
              />
            </div>
            <button type="submit" class="btn-type-two btn">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
